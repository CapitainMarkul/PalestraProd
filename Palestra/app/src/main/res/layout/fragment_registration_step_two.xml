<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/Teal_500"
    >

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_marginBottom="@dimen/margin_bottom_registration_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center_layout"
        android:text="@string/your_phone_number"
        android:theme="@style/TextViewRegistrationScreen" />
<ProgressBar
    android:id="@+id/progressBarPhoneCheck"
    android:layout_centerInParent="true"
    android:layout_width="50dp"
    android:layout_height="50dp" />
