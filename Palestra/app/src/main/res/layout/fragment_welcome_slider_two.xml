<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >
    <ImageView
        android:id="@+id/imageView_mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:src="@drawable/welcome_card_second"/>
    <TextView
        android:id="@+id/top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вам есть чем удивить людей?"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageView_mainCard"
        android:layout_alignEnd="@+id/imageView_mainCard"
        android:textAlignment="center"
        android:layout_alignStart="@+id/imageView_mainCard"
        android:textColor="@android:color/black"
        android:textSize="@dimen/welcome_screen_tv_title_font_size"
        android:layout_marginBottom="80dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_mainCard"
        android:layout_alignEnd="@+id/imageView_mainCard"
        android:layout_above="@+id/top_text"
        android:text="Тогда смело создавайте свое первое событие и удивляйте!"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignStart="@+id/imageView_mainCard"
        android:layout_marginBottom="40dp"
        android:textSize="@dimen/welcome_screen_tv_below_title_font_size"/>
</RelativeLayout>