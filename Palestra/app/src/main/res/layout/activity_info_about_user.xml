<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_create_new_event"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/button_back_create_event"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_back_next"
            android:rotation="180"
            android:adjustViewBounds="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Профиль"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/hint"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lin_image"
        android:layout_below="@+id/rel_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/background_user_info"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:padding="4dp"
            android:background="@drawable/cycle_avatar_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin_image"
        android:background="@color/hint">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tv_user_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"
                android:textColor="@color/blue_light"
                android:textAlignment="center"/>
            <LinearLayout
                android:id="@+id/lin_all_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/user_info_ramka"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/tv_count_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:textColor="@color/blue_light"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Всего был замечен на площадках"
                            android:textStyle="italic"
                            android:textSize="18sp"
                            android:textColor="@color/blue_light"
                            android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_created_event_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:gravity="center|top">

                    <LinearLayout
                        android:layout_weight="0.45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Площадки"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/blue_light"
                            android:textAlignment="center"/>

                        <LinearLayout
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Всего:"
                            android:textStyle="italic"
                            android:textSize="18sp"
                            android:textColor="@color/blue_light"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/tv_count_create_event_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:textColor="@color/blue_light"
                            android:textAlignment="center"/>
                            </LinearLayout>
                        <LinearLayout
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Активные:"
                                android:textStyle="italic"
                                android:textSize="18sp"
                                android:textColor="@color/blue_light"
                                android:textAlignment="center"/>
                            <TextView
                                android:id="@+id/tv_count_create_event"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:textColor="@color/blue_light"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>

                    <Space
                        android:layout_weight="0.1"
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
                    <LinearLayout
                        android:layout_weight="0.45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Участие"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/blue_light"
                            android:textAlignment="center"/>

                        <LinearLayout
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Всего:"
                                android:textStyle="italic"
                                android:textSize="18sp"
                                android:textColor="@color/blue_light"
                                android:textAlignment="center"/>
                            <TextView
                                android:id="@+id/tv_count_participant_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:textColor="@color/blue_light"
                                android:textAlignment="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Активные:"
                                android:textStyle="italic"
                                android:textSize="18sp"
                                android:textColor="@color/blue_light"
                                android:textAlignment="center"/>
                            <TextView
                                android:id="@+id/tv_count_participant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:textColor="@color/blue_light"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</RelativeLayout>