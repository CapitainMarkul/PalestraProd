<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_root_height"
    android:orientation="vertical"
    android:paddingEnd="@dimen/item_root_padding_end"
    android:paddingStart="@dimen/item_root_padding_start"
    android:paddingTop="@dimen/item_root_padding_top"
    android:background="@android:color/background_light">

    <LinearLayout
        android:id="@+id/ln_av_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/item_root_avatar_width"
            android:layout_height="@dimen/item_root_avatar_height"
            android:layout_marginEnd="@dimen/item_root_avatar_margin_end"
            android:src="@drawable/cyrcle_avatar" />

        <TextView
            android:id="@+id/tv_creator_name"
            style="@style/mTextViewNickName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Isaiah Holt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ln_av_name"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ln_av_name"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_age_limit"
            style="@style/mTextViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_age_limit"
            android:paddingBottom="@dimen/item_category_list_padding_top_bottom"
            android:paddingEnd="@dimen/item_category_list_padding_start_end_age_limit"
            android:paddingStart="@dimen/item_category_list_padding_start_end_age_limit"
            android:paddingTop="@dimen/item_category_list_padding_top_bottom"
            android:text="12+" />

        <android.support.v4.widget.Space
            android:layout_width="9dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_category_name"
            style="@style/mTextViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_category_name"
            android:paddingBottom="@dimen/item_category_list_padding_top_bottom"
            android:paddingEnd="@dimen/item_category_list_padding_start_end_name_category"
            android:paddingStart="@dimen/item_category_list_padding_start_end_name_category"
            android:paddingTop="@dimen/item_category_list_padding_top_bottom"
            android:text="Категория"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_event"
        style="@style/mTextViewTitleEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Astronomy Or Astrology" />

    <TextView
        android:id="@+id/tv_brief_event"
        style="@style/mTextViewBriefEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_event"
        android:text="There is a lot of exciting stuff going on in the stars above us " />
</RelativeLayout>