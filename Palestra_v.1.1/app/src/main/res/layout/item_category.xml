<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_category_list_height">
        <!--app:cardCornerRadius="50dp">-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundDefault" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_age_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_age_limit"
                android:paddingBottom="@dimen/item_category_list_padding_top_bottom"
                android:paddingEnd="@dimen/item_category_list_padding_start_end_age_limit"
                android:paddingStart="@dimen/item_category_list_padding_start_end_age_limit"
                android:paddingTop="@dimen/item_category_list_padding_top_bottom"
                android:text="12+"
                android:textSize="@dimen/item_category_list_text_size" />

            <android.support.v4.widget.Space
                android:layout_width="9dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_category_name"
                android:paddingBottom="@dimen/item_category_list_padding_top_bottom"
                android:paddingEnd="@dimen/item_category_list_padding_start_end_name_category"
                android:paddingStart="@dimen/item_category_list_padding_start_end_name_category"
                android:paddingTop="@dimen/item_category_list_padding_top_bottom"
                android:text="Категория"
                android:textAlignment="center"
                android:textSize="@dimen/item_category_list_text_size" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>