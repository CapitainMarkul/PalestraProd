<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mTextViewNickName" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorTextSelectedDefault</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="mTextViewTitleEvent" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/colorTextSelectedDefault</item>
    </style>

    <style name="mTextViewBriefEvent" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="mTextViewDetailInfoEvent" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="mTextViewCategory" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="mTextViewNewEventTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="mTextViewNewEventNext" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorTextNewEventNext</item>
    </style>
</resources>
